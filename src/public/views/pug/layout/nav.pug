.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.shadow-sm
    h5#logo.my-0.mr-md-auto.font-weight-normal Score manager
    nav.my-2.my-md-0.mr-md-3.d-flex.justify-content-end
    if(authentication === false) 
        a#login-btn.btn.btn-primary(href='/login') 로그인
        a#signup-btn.btn.btn-outline-primary.ms-3(href='/signup') 회원가입
    else 
        if (user)
            if(user.username === 'admin')
                #user-menu.dropdown
                    button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        img(src="https://identicon-api.herokuapp.com/hongjk7777/25?format=png" alt="avatar image")
                    .dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuButton')
                        a.dropdown-item(href='/settings') 비밀번호 변경
                        a.dropdown-item(href='/classList') 내 클래스
                        form(action="/logout", method="post") 
                            button.dropdown-item(type="submit") 로그아웃    
            else 
                #user-menu.dropdown
                    button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        img(src="https://identicon-api.herokuapp.com/hongjk7777/25?format=png" alt="avatar image")
                    .dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuButton')
                        a.dropdown-item(href='/settings') 비밀번호 변경
                        a.dropdown-item(href='/class') 시험 성적
                        form(action="/logout", method="post") 
                            button.dropdown-item(type="submit") 로그아웃

        else 
            #user-menu.dropdown
                button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                    img(src="https://identicon-api.herokuapp.com/hongjk7777/25?format=png" alt="avatar image")
                .dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuButton')
                    a.dropdown-item(href='/settings') 비밀번호 변경
                    a.dropdown-item(href='/class') 시험 성적
                    form(action="/logout", method="post") 
                        button.dropdown-item(type="submit") 로그아웃
