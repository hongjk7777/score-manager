extends ../layout/layout.pug

block append header 
    link(rel="stylesheet", href="../../public/views/css/home.css")
    link(rel="stylesheet", href="../../public/views/css/nav.css")

block content
    .container
        .row
            .col-12
                div
                    h4.text-center #{round}회차 시험 결과
                    if (commonRound > 0)
                        h4.text-center (공통 #{commonRound}회차)
                ul.m-auto
                    each student in studentList
                        li.col-11.d-flex.flex-justify-between.width-full.py-4.border-bottom.student-list
                            #student.col-9.col-lg-9.d-inline-block
                                #student-name.mb-1 #{student.ranking}등: #{student.name}
                                | #{student.firstScore}점/#{student.secondScore}점/#{student.thirdScore}점 
                                | 총점: #{student.scoreSum} <br>
                                | 서울대 #{student.seoulDept} 연세대 #{student.yonseiDept}

                                if(student.seoulDeptRanking)
                                    div 서울대 #{student.seoulDept}: #{student.seoulDeptRanking}등
                                if(student.yonseiDeptRanking)
                                    div 연세대 #{student.yonseiDept}: #{student.yonseiDeptRanking}등
               

