extends ../layout/layout.pug

block append header 
    link(rel="stylesheet", href="../../public/views/css/home.css")
    link(rel="stylesheet", href="../../public/views/css/nav.css")
    link(rel="icon", type="image/png", href="../../public/views/img/favicon.ico")


block content
    .container
        .row
            .col-12
                div
                    h4.text-center #{round}회차 시험 결과
                    if (commonRound > 0)
                        h4.text-center (공통 #{commonRound}회차)
                ul.m-auto
                    each student in rankingList
                        li.col-11.d-flex.flex-justify-between.width-full.py-4.border-bottom.student-list
                            #student.col-9.col-lg-9.d-inline-block
                                #student-name.mb-1 #{student.ranking}등: #{student.studentName}
                                | #{student.scores[0]}점/#{student.scores[1]}점/#{student.scores[2]}점 
                                | 총점: #{student.scoreSum} <br>
                                if (student.seoulDept)
                                    | 서울대 #{student.seoulDept} 
                                if (student.yonseiDept)
                                    | 연세대 #{student.yonseiDept}
               

